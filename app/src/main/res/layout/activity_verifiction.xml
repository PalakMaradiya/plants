<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifictionActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">



        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/cancle"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Later "
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="end"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to E-Plant "
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail "
            android:layout_marginTop="@dimen/_30sdp"
            android:textStyle="bold"/>


        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbutton"
            android:text="   Write your mail...."
            android:textColor="#9BA4B5"
            android:gravity="fill"
            android:textAllCaps="false">
        </android.support.v7.widget.AppCompatButton>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifiction Code "
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"/>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            app:cardBackgroundColor="#F0F0F0"
            app:cardCornerRadius="@dimen/_5sdp">


            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Enter  Verfication Code"
                android:textColor="#9BA4B5"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="end"
                android:src="@drawable/eye"/>
        </androidx.cardview.widget.CardView>


